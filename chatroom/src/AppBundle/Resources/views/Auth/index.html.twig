{% extends 'base.html.twig' %}

{% block body %}
	<h1>Login to chat room</h1>
	<div id="login_container">
		<form method="POST">
			<label for="email_address">Email Address</label>
				<input id="email_address"  name="email_address" type="text" />
			<br />
			<label for="password">Password</label>
				<input id="password" name="password" type="password" />

			<input type="submit" value="Login"></input>

		</form>

{% if app.session.flashBag.has('warning') %}
        <div class="wrong-password">
            {% for msg in app.session.flashBag.get('warning') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
	</div>
{% endblock %}

{% block stylesheets %}
<style>
    body,html { width:100%; height: 100%; background #eee; }
    #login_container { margin: 20px; background: #ddd; padding: 80px 20px;}
    label { width: 200px; display:block; float:left; text-align:right; padding-right: 10px; }
    .wrong-password { padding: 5px 10px; background: #f99; float:left}
</style>
{% endblock %}
